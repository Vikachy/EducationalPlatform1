<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EducationalPlatform.Views.TeacherDashboardPage"
             Title="Панель учителя">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <!-- ЗАГОЛОВОК -->
            <Label Text="Мои курсы"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource TextColor}" />

            <!-- СТАТИСТИКА -->
            <Border BackgroundColor="{DynamicResource PrimaryColor}"
                    Stroke="{DynamicResource SecondaryColor}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">
                <HorizontalStackLayout Spacing="20">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding TotalCourses}" 
                               FontSize="20"
                               TextColor="White"
                               FontAttributes="Bold" />
                        <Label Text="Курсов"
                               FontSize="12"
                               TextColor="White" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding TotalStudents}" 
                               FontSize="20"
                               TextColor="White"
                               FontAttributes="Bold" />
                        <Label Text="Студентов"
                               FontSize="12"
                               TextColor="White" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding AverageRating, StringFormat='{0:F1}'}" 
                               FontSize="20"
                               TextColor="White"
                               FontAttributes="Bold" />
                        <Label Text="Рейтинг"
                               FontSize="12"
                               TextColor="White" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Border>

            <!-- ДЕЙСТВИЯ -->
            <Grid ColumnDefinitions="*,*" 
                  ColumnSpacing="10" 
                  RowSpacing="10">

                <Button Grid.Row="0" Grid.Column="0"
                        Text="Создать курс"
                        Clicked="OnCreateCourseClicked"
                        BackgroundColor="{DynamicResource AccentColor}"
                        TextColor="White"
                        HeightRequest="40" />

                <Button Grid.Row="0" Grid.Column="1"
                        Text="Отчеты"
                        Clicked="OnReportsClicked"
                        BackgroundColor="{DynamicResource PrimaryColor}"
                        TextColor="White"
                        HeightRequest="40" />
            </Grid>

            <!-- СПИСОК КУРСОВ -->
            <CollectionView x:Name="CoursesCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,5"
                                BackgroundColor="{DynamicResource CardBackgroundColor}"
                                Stroke="{DynamicResource PrimaryColor}"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 10"
                                Padding="15"
                                HeightRequest="180">

                            <VerticalStackLayout Spacing="8">

                                <!-- Заголовок курса и кнопки -->
                                <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                                    <!-- Название курса -->
                                    <Label Grid.Column="0"
                                           Text="{Binding CourseName}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{DynamicResource TextColor}"
                                           VerticalOptions="Center" />

                                    <!-- Кнопка Контент -->
                                    <Button Grid.Column="1"
                                            Text="Контент"
                                            Clicked="OnManageContentClicked"
                                            BackgroundColor="#2196F3"
                                            TextColor="White"
                                            FontSize="10"
                                            FontAttributes="Bold"
                                            CornerRadius="5"
                                            HeightRequest="30"
                                            WidthRequest="100"
                                            VerticalOptions="Center" />

                                    <!-- Статус публикации -->
                                    <Label Grid.Column="2"
                                           Text="{Binding IsPublished, Converter={StaticResource PublishedConverter}}"
                                           FontSize="10"
                                           BackgroundColor="{Binding IsPublished, Converter={StaticResource StatusColorConverter}}"
                                           TextColor="White"
                                           Padding="8,4"
                                           VerticalOptions="Center" />
                                </Grid>

                                <!-- Описание -->
                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       TextColor="#666666"
                                       MaxLines="2"
                                       LineBreakMode="TailTruncation" />

                                <!-- Статистика -->
                                <Grid ColumnDefinitions="*,*,*" 
                                      VerticalOptions="Center"
                                      HeightRequest="40">

                                    <VerticalStackLayout Grid.Column="0" 
                                                         Spacing="2"
                                                         HorizontalOptions="Center">
                                        <Label Text="{Binding StudentCount}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource PrimaryColor}"
                                               HorizontalOptions="Center" />
                                        <Label Text="студентов"
                                               FontSize="10"
                                               TextColor="#666666"
                                               HorizontalOptions="Center" />
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="1" 
                                                         Spacing="2"
                                                         HorizontalOptions="Center">
                                        <Label Text="{Binding AverageRating, StringFormat='{0:F1}'}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource AccentColor}"
                                               HorizontalOptions="Center" />
                                        <Label Text="рейтинг"
                                               FontSize="10"
                                               TextColor="#666666"
                                               HorizontalOptions="Center" />
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="2" 
                                                         Spacing="2"
                                                         HorizontalOptions="Center">
                                        <Label Text="{Binding Groups.Count}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource SecondaryColor}"
                                               HorizontalOptions="Center" />
                                        <Label Text="группы"
                                               FontSize="10"
                                               TextColor="#666666"
                                               HorizontalOptions="Center" />
                                    </VerticalStackLayout>
                                </Grid>

                                <!-- Кнопки управления -->
                                <Grid ColumnDefinitions="*,*" 
                                      ColumnSpacing="8"
                                      HeightRequest="40"
                                      VerticalOptions="End">

                                    <Button Grid.Column="0"
                                            Text="Управление"
                                            Clicked="OnManageCourseClicked"
                                            BackgroundColor="#4CAF50"
                                            TextColor="White"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            CornerRadius="5"
                                            HeightRequest="36" />

                                    <Button Grid.Column="1"
                                            Text="Группы"
                                            Clicked="OnManageGroupsClicked"
                                            BackgroundColor="#FF9800"
                                            TextColor="White"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            CornerRadius="5"
                                            HeightRequest="36" />
                                </Grid>

                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
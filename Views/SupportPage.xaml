<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="EducationalPlatform.Views.SupportPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Поддержка"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto,*">
        <!-- Современный заголовок -->
        <Border Grid.Row="0"
                BackgroundColor="{DynamicResource PrimaryColor}"
                Padding="20,15"
                StrokeThickness="0">
            <Label Text="Техническая поддержка" 
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Border>

        <ScrollView Grid.Row="1" BackgroundColor="{DynamicResource BackgroundColor}">
            <StackLayout Padding="20" Spacing="20">

            <!-- Информация о поддержке -->
            <Border BackgroundColor="White"
                    Stroke="{DynamicResource PrimaryColor}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    Padding="20">
                <StackLayout Spacing="12">
                    <Label Text="Свяжитесь с нами" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{DynamicResource PrimaryColor}"/>
                    
                    <Label Text="Email: support@educationalplatform.com" 
                           FontSize="15" 
                           TextColor="#666"
                           Margin="0,5,0,0"/>
                    
                    <Label Text="Телефон: +7 (800) 123-45-67" 
                           FontSize="15" 
                           TextColor="#666"/>
                    
                    <Label Text="Время работы: Пн-Пт 9:00-18:00" 
                           FontSize="15" 
                           TextColor="#666"/>
                </StackLayout>
            </Border>

            <!-- Создание обращения -->
            <Border BackgroundColor="White"
                    Stroke="{DynamicResource PrimaryColor}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    Padding="20">
                <StackLayout Spacing="18">
                    <Label Text="Создать обращение" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{DynamicResource PrimaryColor}"/>
                    
                    <!-- Тип обращения -->
                    <Label Text="Тип обращения:" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}"
                           Margin="0,0,0,5"/>
                    
                    <Border BackgroundColor="#F8F9FA"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 8"
                            Padding="0">
                        <Picker x:Name="TicketTypePicker" 
                                Title="Выберите тип"
                                BackgroundColor="Transparent"
                                Margin="12,0"
                                FontSize="16"
                                HeightRequest="50">
                            <Picker.Items>
                                <x:String>Ошибка в приложении</x:String>
                                <x:String>Вопрос по курсу</x:String>
                                <x:String>Предложение</x:String>
                                <x:String>Другое</x:String>
                            </Picker.Items>
                        </Picker>
                    </Border>
                    
                    <!-- Тема -->
                    <Label Text="Тема:" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}"
                           Margin="0,0,0,5"/>
                    
                    <Border BackgroundColor="#F8F9FA"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 8"
                            Padding="0">
                        <Entry x:Name="SubjectEntry" 
                               Placeholder="Краткое описание проблемы"
                               BackgroundColor="Transparent"
                               Margin="12,0"
                               FontSize="16"
                               HeightRequest="50"/>
                    </Border>
                    
                    <!-- Описание -->
                    <Label Text="Описание:" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}"
                           Margin="0,0,0,5"/>
                    
                    <Border BackgroundColor="#F8F9FA"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 8"
                            Padding="0">
                        <Editor x:Name="DescriptionEditor" 
                                HeightRequest="120" 
                                Placeholder="Подробно опишите проблему или вопрос"
                                BackgroundColor="Transparent"
                                Margin="12,10"
                                FontSize="14"/>
                    </Border>
                    
                    <!-- Кнопка отправки -->
                    <Button x:Name="SubmitButton" 
                            Text="Отправить обращение" 
                            BackgroundColor="{DynamicResource PrimaryColor}" 
                            TextColor="White" 
                            CornerRadius="8" 
                            HeightRequest="50"
                            FontSize="16"
                            FontAttributes="Bold"
                            Margin="0,10,0,0"
                            Clicked="OnSubmitClicked"/>
                </StackLayout>
            </Border>

            <!-- Часто задаваемые вопросы -->
            <Border BackgroundColor="White"
                    Stroke="{DynamicResource PrimaryColor}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12"
                    Padding="20">
                <StackLayout Spacing="12">
                    <Label Text="Часто задаваемые вопросы" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{DynamicResource PrimaryColor}"/>
                    
                    <Button Text="Как записаться на курс?" 
                            BackgroundColor="#E3F2FD" 
                            TextColor="{DynamicResource PrimaryColor}"
                            BorderColor="{DynamicResource PrimaryColor}"
                            BorderWidth="1"
                            CornerRadius="8"
                            HeightRequest="45"
                            FontSize="15"
                            Clicked="OnFaqClicked"/>
                    
                    <Button Text="Как получить игровую валюту?" 
                            BackgroundColor="#E3F2FD" 
                            TextColor="{DynamicResource PrimaryColor}"
                            BorderColor="{DynamicResource PrimaryColor}"
                            BorderWidth="1"
                            CornerRadius="8"
                            HeightRequest="45"
                            FontSize="15"
                            Clicked="OnFaqClicked"/>
                    
                    <Button Text="Проблемы с входом в систему" 
                            BackgroundColor="#E3F2FD" 
                            TextColor="{DynamicResource PrimaryColor}"
                            BorderColor="{DynamicResource PrimaryColor}"
                            BorderWidth="1"
                            CornerRadius="8"
                            HeightRequest="45"
                            FontSize="15"
                            Clicked="OnFaqClicked"/>
                    
                    <Button Text="Как изменить настройки?" 
                            BackgroundColor="#E3F2FD" 
                            TextColor="{DynamicResource PrimaryColor}"
                            BorderColor="{DynamicResource PrimaryColor}"
                            BorderWidth="1"
                            CornerRadius="8"
                            HeightRequest="45"
                            FontSize="15"
                            Clicked="OnFaqClicked"/>
                </StackLayout>
            </Border>

            <!-- Кнопка назад -->
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="20,15">
                <Button x:Name="BackButton" 
                        Text="← Назад" 
                        BackgroundColor="{DynamicResource SecondaryColor}" 
                        TextColor="White" 
                        CornerRadius="8" 
                        HeightRequest="50"
                        FontSize="16"
                        FontAttributes="Bold"
                        Clicked="OnBackClicked"/>
            </Border>

        </StackLayout>
    </ScrollView>
    </Grid>

</ContentPage>



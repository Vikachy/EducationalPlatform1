<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EducationalPlatform.Views.TestStudyPage"
             Title="Тестирование">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Заголовок и таймер -->
        <Border Grid.Row="0" BackgroundColor="{DynamicResource PrimaryColor}" Padding="15">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0">
                    <Label x:Name="TitleLabel" 
                           Text="Тест" 
                           FontSize="20" 
                           TextColor="White" 
                           FontAttributes="Bold" />
                    <Label x:Name="TimerLabel" 
                           Text="Время: 60:00"
                           FontSize="14" 
                           TextColor="White" />
                </VerticalStackLayout>
                <Button Grid.Column="1" 
                        Text="Назад" 
                        Clicked="OnBackClicked"
                        BackgroundColor="Transparent"
                        TextColor="White" />
            </Grid>
        </Border>

        <!-- Вопросы теста -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Прогресс теста -->
                <Border BackgroundColor="#E3F2FD" Padding="10">
                    <HorizontalStackLayout>
                        <Label Text="Вопрос" 
                               FontSize="14" 
                               FontAttributes="Bold" />
                        <Label x:Name="ProgressLabel" 
                               Text="1 из 10"
                               FontSize="14" />
                        <Label Text="• Время:" 
                               FontSize="14" 
                               Margin="10,0,0,0" />
                        <Label x:Name="TimeLeftLabel" 
                               Text="59:45"
                               FontSize="14" 
                               FontAttributes="Bold" />
                    </HorizontalStackLayout>
                </Border>

                <!-- Текущий вопрос -->
                <Border BackgroundColor="#F8F9FA" Padding="15">
                    <VerticalStackLayout Spacing="15">
                        <Label x:Name="QuestionTextLabel" 
                               FontSize="18"
                               FontAttributes="Bold"
                               LineBreakMode="WordWrap" />

                        <!-- Варианты ответов -->
                        <VerticalStackLayout x:Name="AnswerOptionsStack" Spacing="10">
                            <!-- Ответы будут добавляться динамически -->
                        </VerticalStackLayout>

                        <!-- Текстовый ответ -->
                        <StackLayout x:Name="TextAnswerSection" IsVisible="False">
                            <Editor x:Name="TextAnswerEditor" 
                                    HeightRequest="120"
                                    Placeholder="Введите ваш ответ..." />
                        </StackLayout>

                        <!-- Навигация по вопросам -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Button x:Name="PrevQuestionButton" 
                                    Text="⬅️ Предыдущий"
                                    Clicked="OnPrevQuestionClicked" />
                            <Button x:Name="NextQuestionButton" 
                                    Text="Следующий ➡️"
                                    Clicked="OnNextQuestionClicked"
                                    BackgroundColor="{DynamicResource PrimaryColor}"
                                    TextColor="White" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Результат теста -->
                <Border x:Name="ResultSection" 
                        IsVisible="False"
                        BackgroundColor="#E8F5E8"
                        Stroke="#4CAF50"
                        StrokeThickness="2"
                        Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Тест завершен!" 
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center" />
                        <Label x:Name="ScoreLabel" 
                               Text="Ваш результат: 85/100"
                               FontSize="18"
                               HorizontalOptions="Center" />
                        <Label x:Name="ResultMessageLabel" 
                               Text="Поздравляем! Вы успешно прошли тест."
                               FontSize="16"
                               HorizontalOptions="Center" />
                        <Button Text="Вернуться к курсу" 
                                Clicked="OnReturnToCourseClicked"
                                BackgroundColor="{DynamicResource PrimaryColor}"
                                TextColor="White"
                                HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Кнопка завершения -->
        <Button Grid.Row="2" 
                x:Name="FinishButton"
                Text="Завершить тест" 
                Clicked="OnFinishTestClicked"
                BackgroundColor="{DynamicResource AccentColor}"
                TextColor="White"
                Margin="15"
                IsVisible="False" />

    </Grid>
</ContentPage>
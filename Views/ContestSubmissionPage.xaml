<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EducationalPlatform.Views.ContestSubmissionPage"
             Title="Заявка на конкурс">

    <Grid RowDefinitions="Auto,*">
        <!-- Современный заголовок -->
        <Border Grid.Row="0" 
                BackgroundColor="{DynamicResource PrimaryColor}" 
                Padding="20,15"
                StrokeThickness="0">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Grid.Column="0"
                        Text="←"
                        Clicked="OnBackClicked"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="20"
                        WidthRequest="40"
                        HeightRequest="40" />
                <Label Grid.Column="1"
                       x:Name="HeaderLabel"
                       Text="Отправка проекта"
                       FontSize="22"
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="Center" />
            </Grid>
        </Border>

        <!-- Форма отправки -->
        <ScrollView Grid.Row="1" BackgroundColor="{DynamicResource BackgroundColor}">
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- Название проекта -->
                <Border BackgroundColor="White"
                        Stroke="#E0E0E0"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="0">
                    <Entry x:Name="ProjectNameEntry"
                           Placeholder="Название проекта"
                           BackgroundColor="Transparent"
                           Margin="15,0"
                           FontSize="16"
                           HeightRequest="50" />
                </Border>

                <!-- Описание проекта -->
                <Border BackgroundColor="White"
                        Stroke="#E0E0E0"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="0">
                    <Editor x:Name="DescriptionEditor"
                            Placeholder="Описание проекта"
                            AutoSize="TextChanges"
                            BackgroundColor="Transparent"
                            Margin="15,10"
                            FontSize="14" />
                </Border>

                <!-- Выбор файла -->
                <Border BackgroundColor="White"
                        Stroke="#E0E0E0"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Button Text="Выбрать ZIP архив"
                                Clicked="OnPickZipClicked"
                                BackgroundColor="{DynamicResource SecondaryColor}"
                                TextColor="White"
                                CornerRadius="8"
                                HeightRequest="45"
                                FontSize="16" />
                        <Label x:Name="PickedFileLabel"
                               Text="Файл не выбран"
                               FontSize="14"
                               TextColor="#666"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <!-- Кнопка отправки -->
                <Button Text="Отправить проект"
                        Clicked="OnSubmitClicked"
                        BackgroundColor="{DynamicResource PrimaryColor}"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontSize="18"
                        FontAttributes="Bold"
                        Margin="0,10,0,0" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
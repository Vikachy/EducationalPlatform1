<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EducationalPlatform.Views.PracticePage"
             Title="Практическое задание">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">
            <Label x:Name="TitleLabel" FontAttributes="Bold" FontSize="18" />
            <Editor x:Name="CodeEditor" Placeholder="Введите решение" AutoSize="TextChanges" HeightRequest="160"/>
            <Button Text="Проверить" Clicked="OnCheckClicked" BackgroundColor="{DynamicResource PrimaryColor}" TextColor="White" />
            <Label x:Name="ResultLabel" FontSize="14" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>









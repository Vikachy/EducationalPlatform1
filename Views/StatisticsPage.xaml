<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EducationalPlatform.Views.StatisticsPage"
             Title="Статистика">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="15">

            <!-- ОБЩАЯ СТАТИСТИКА -->
            <Border BackgroundColor="{DynamicResource BackgroundColor}"
                    Stroke="{DynamicResource PrimaryColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 15"
                    Padding="0">

                <VerticalStackLayout Spacing="0">
                    <Border BackgroundColor="{DynamicResource PrimaryColor}"
                            Padding="15">
                        <Label Text="Общая статистика"
                               FontSize="18"
                               TextColor="White"
                               FontAttributes="Bold" />
                    </Border>

                    <Grid Padding="15" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*" RowSpacing="10">
                        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                            <Label Text="{Binding TotalCourses}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryColor}"
                                   HorizontalOptions="Center" />
                            <Label Text="Курсов начато"
                                   FontSize="12"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                            <Label Text="{Binding CompletedCourses}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#4CAF50"
                                   HorizontalOptions="Center" />
                            <Label Text="Курсов завершено"
                                   FontSize="12"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="5">
                            <Label Text="{Binding TotalTimeSpent}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource SecondaryColor}"
                                   HorizontalOptions="Center" />
                            <Label Text="Часов обучения"
                                   FontSize="12"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="5">
                            <Label Text="{Binding AverageScore}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource AccentColor}"
                                   HorizontalOptions="Center" />
                            <Label Text="Средний балл"
                                   FontSize="12"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="5">
                            <ProgressBar Progress="{Binding CompletionRate}"
                                       ProgressColor="{DynamicResource PrimaryColor}"
                                       BackgroundColor="#E0E0E0"
                                       HeightRequest="10"
                                       Margin="0,10" />
                            <Label Text="{Binding CompletionRate, StringFormat='Процент завершения: {0:P0}'}"
                                   FontSize="12"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- ДОСТИЖЕНИЯ -->
            <Border BackgroundColor="{DynamicResource BackgroundColor}"
                    Stroke="{DynamicResource AccentColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 15"
                    Padding="0">

                <VerticalStackLayout Spacing="0">
                    <Border BackgroundColor="{DynamicResource AccentColor}"
                            Padding="15">
                        <Label Text="Достижения"
                               FontSize="18"
                               TextColor="White"
                               FontAttributes="Bold" />
                    </Border>

                    <CollectionView ItemsSource="{Binding RecentAchievements}"
                                    HeightRequest="150"
                                    SelectionMode="None">

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="10,5"
                                        BackgroundColor="{DynamicResource CardColor}"
                                        Stroke="#DDD"
                                        StrokeThickness="1"
                                        StrokeShape="RoundRectangle 10"
                                        Padding="15">

                                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                                        <Label Grid.Column="0"
                                               Text="{Binding Icon}"
                                               FontSize="20"
                                               VerticalOptions="Center" />

                                        <VerticalStackLayout Grid.Column="1" Spacing="2" Margin="10,0">
                                            <Label Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontAttributes="Bold" />
                                            <Label Text="{Binding Description}"
                                                   FontSize="11"
                                                   TextColor="#666" />
                                        </VerticalStackLayout>

                                        <Label Grid.Column="2"
                                               Text="{Binding EarnedDate, StringFormat='{0:dd.MM.yy}'}"
                                               FontSize="10"
                                               TextColor="#999"
                                               VerticalOptions="Center" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Button Text="Все достижения →"
                            BackgroundColor="Transparent"
                            TextColor="{DynamicResource AccentColor}"
                            Clicked="OnAllAchievementsClicked"
                            Margin="10" />
                </VerticalStackLayout>
            </Border>

            <!-- АКТИВНОСТЬ -->
            <Border BackgroundColor="{DynamicResource BackgroundColor}"
                    Stroke="{DynamicResource SecondaryColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 15"
                    Padding="0">

                <VerticalStackLayout Spacing="0">
                    <Border BackgroundColor="{DynamicResource SecondaryColor}"
                            Padding="15">
                        <Label Text="Активность"
                               FontSize="18"
                               TextColor="White"
                               FontAttributes="Bold" />
                    </Border>

                    <VerticalStackLayout Padding="15" Spacing="15">
                        <HorizontalStackLayout Spacing="15">
                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding CurrentStreak}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource AccentColor}"
                                       HorizontalOptions="Center" />
                                <Label Text="Текущая серия"
                                       FontSize="11"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding LongestStreak}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource PrimaryColor}"
                                       HorizontalOptions="Center" />
                                <Label Text="Рекордная серия"
                                       FontSize="11"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding TotalDays}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{DynamicResource SecondaryColor}"
                                       HorizontalOptions="Center" />
                                <Label Text="Всего дней"
                                       FontSize="11"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <!-- График активности -->
                        <Border BackgroundColor="#F8F9FA"
                                Stroke="#DDD"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 10"
                                Padding="10"
                                HeightRequest="80">

                            <Label Text="График активности за последние 7 дней"
                                   FontSize="12"
                                   TextColor="#666"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                            <!-- Здесь можно добавить реальный график -->
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
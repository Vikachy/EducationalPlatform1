<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EducationalPlatform.Views.TeacherGroupsPage"
             Title="Управление группами">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Заголовок -->
        <Border Grid.Row="0" BackgroundColor="{DynamicResource PrimaryColor}" Padding="15">
            <HorizontalStackLayout>
                <Label Text="Управление учебными группами" 
                   FontSize="20" 
                   TextColor="White" 
                   FontAttributes="Bold"
                   VerticalOptions="Center" />
                <Button Text="Назад" 
                    Clicked="OnBackClicked"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Margin="20,0,0,0" />
            </HorizontalStackLayout>
        </Border>

        <!-- Основное содержимое -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Создание новой группы -->
                <Border BackgroundColor="#F8F9FA" Padding="15" Stroke="#DDD" StrokeThickness="1">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Создать новую группу" FontSize="16" FontAttributes="Bold" />

                        <Label Text="Выберите курс:" />
                        <Picker x:Name="CoursePicker" 
                            Title="Выберите курс"
                            ItemDisplayBinding="{Binding CourseName}" />

                        <Label Text="Название группы:" />
                        <Entry x:Name="GroupNameEntry" Placeholder="Введите название группы" />

                        <Button Text="Создать группу" 
                            Clicked="OnCreateGroupClicked"
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White" />
                    </VerticalStackLayout>
                </Border>

                <!-- Список групп -->
                <Label Text="Мои группы:" FontSize="18" FontAttributes="Bold" />
                <CollectionView x:Name="GroupsCollection" 
                          SelectionMode="Single"
                          SelectionChanged="OnGroupSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="#F8F9FA" 
                                Stroke="#DDD" 
                                StrokeThickness="1" 
                                Padding="15"
                                Margin="0,5">
                                <VerticalStackLayout Spacing="10">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding GroupName}" 
                                               FontSize="16" 
                                               FontAttributes="Bold" />
                                            <Label Text="{Binding CourseName}" 
                                               FontSize="12" 
                                               TextColor="#666" />
                                        </VerticalStackLayout>
                                        <Label Grid.Column="1" 
                                           Text="{Binding StudentCount, StringFormat='{0} студентов'}" 
                                           FontSize="12" />
                                    </Grid>

                                    <Label Text="{Binding IsActive, StringFormat='Статус: {0}'}" 
                                       FontSize="12" />

                                    <HorizontalStackLayout Spacing="10">
                                        <Button Text="Чат" 
                                            Clicked="OnOpenChatClicked"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{DynamicResource PrimaryColor}"
                                            TextColor="White" />
                                        <Button Text="Деактивировать" 
                                            Clicked="OnDeactivateGroupClicked"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{DynamicResource DangerColor}"
                                            TextColor="White" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Студенты выбранной группы -->
                <StackLayout x:Name="StudentsSection" IsVisible="False">
                    <Label Text="Студенты группы:" FontSize="16" FontAttributes="Bold" />

                    <!-- Кнопки массового управления -->
                    <HorizontalStackLayout Spacing="10" Margin="0,10">
                        <Button Text="Добавить студентов" 
                            Clicked="OnAddMultipleStudentsClicked"
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            HorizontalOptions="FillAndExpand" />
                        <Button Text="Записать на курс" 
                            Clicked="OnEnrollGroupToCourseClicked"
                            BackgroundColor="{DynamicResource SuccessColor}"
                            TextColor="White"
                            HorizontalOptions="FillAndExpand" />
                    </HorizontalStackLayout>


                    <!-- Список студентов -->
                    <CollectionView x:Name="GroupStudentsCollection">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="#F8F9FA" 
                                    Stroke="#DDD" 
                                    StrokeThickness="1" 
                                    Padding="10"
                                    Margin="0,2">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Username}" FontSize="14" />
                                            <Label Text="{Binding FirstName, StringFormat='{0}'}" 
                                               FontSize="12" 
                                               TextColor="#666" />
                                        </VerticalStackLayout>
                                        <Button Text="Удалить" 
                                            Clicked="OnRemoveStudentClicked"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="{DynamicResource DangerColor}"
                                            TextColor="White"
                                            FontSize="10" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
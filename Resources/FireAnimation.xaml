<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- АНИМАЦИЯ ОГОНЬКА ДЛЯ СЕРИИ -->
    <Style x:Key="FireAnimationStyle" TargetType="Label">
        <Setter Property="Text" Value="🔥" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="TextColor" Value="{DynamicResource StreakColor}" />
    </Style>

    <!-- СТИЛЬ ДЛЯ КНОПКИ ПРОДОЛЖЕНИЯ СЕРИИ -->
    <Style x:Key="StreakButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource StreakColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="15" />
        <Setter Property="HeightRequest" Value="30" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- СТИЛЬ ДЛЯ БЛОКА СЕРИИ -->
    <Style x:Key="StreakBlockStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="Black" />
        <Setter Property="Stroke" Value="{DynamicResource AccentColor}" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="StrokeShape" Value="RoundRectangle 15" />
        <Setter Property="HeightRequest" Value="120" />
    </Style>

    <!-- СТИЛЬ ДЛЯ ТЕКСТА СЕРИИ -->
    <Style x:Key="StreakTextStyle" TargetType="Label">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

</ResourceDictionary>


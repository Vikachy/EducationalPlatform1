<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EducationalPlatform.Resources.Styles.TeenStyles">

    <!-- ЦВЕТА ДЛЯ ПОДРОСТКОВОЙ ТЕМЫ -->
    <Color x:Key="PrimaryColor">#669bbc</Color>
    <Color x:Key="SecondaryColor">#003049</Color>
    <Color x:Key="BackgroundColor">#fdf0d5</Color>
    <Color x:Key="AccentColor">#c1121f</Color>
    <Color x:Key="DangerColor">#780000</Color>
    <Color x:Key="TextColor">#003049</Color>
    <Color x:Key="LightTextColor">#fdf0d5</Color>

    <!-- СТИЛИ ДЛЯ ПОДРОСТКОВОЙ ТЕМЫ -->
    <Style x:Key="TeenLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="FontFamily" Value="OpenSans-Semibold" />
    </Style>

    <Style x:Key="TeenEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="PlaceholderColor" Value="#666" />
        <Setter Property="FontFamily" Value="OpenSans-Regular" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <Style x:Key="TeenButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="TextColor" Value="{DynamicResource LightTextColor}" />
        <Setter Property="FontFamily" Value="OpenSans-Semibold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>


    <Style x:Key="TeenFrameStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{DynamicResource BackgroundColor}" />
        <Setter Property="Stroke" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="15" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Добавьте эти стили в ваш ResourceDictionary -->

    <Style x:Key="StandardPickerStyle" TargetType="Picker">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="TitleColor" Value="#666" />
        <Setter Property="FontFamily" Value="OpenSans-Regular" />
        <Setter Property="HeightRequest" Value="45" />
    </Style>

    <Style x:Key="StandardEditorStyle" TargetType="Editor">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="PlaceholderColor" Value="#666" />
        <Setter Property="FontFamily" Value="OpenSans-Regular" />
        <Setter Property="AutoSize" Value="TextChanges" />
    </Style>


</ResourceDictionary>